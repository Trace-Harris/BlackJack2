<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TableActivity">

    <TextView
        android:drawableLeft="@drawable/default_skin_foreground"
        android:id="@+id/playerText"
        android:text=""
        android:gravity="center"
        android:textSize="24sp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <LinearLayout
        android:layout_weight="4"
        android:weightSum="3"
        android:orientation="vertical"
        android:background="@drawable/card_table"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:weightSum="5"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <ImageView
                android:id="@+id/dealerCard1"
                android:src="@drawable/card_back"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/dealerCard2"
                android:src="@drawable/card_back"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/dealerCard3"
                android:src="@drawable/card_back"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/dealerCard4"
                android:src="@drawable/card_back"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/dealerCard5"
                android:src="@drawable/card_back"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

        </LinearLayout>
        <LinearLayout
            android:weightSum="5"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <ImageView
                android:id="@+id/playerCard1"
                android:src="@drawable/card_back"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/playerCard2"
                android:src="@drawable/card_back"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/playerCard3"
                android:src="@drawable/card_back"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/playerCard4"
                android:src="@drawable/card_back"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/playerCard5"
                android:src="@drawable/card_back"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_weight=".5"
            android:layout_width="match_parent"
            android:layout_height="0dp">


            <Button
                android:id="@+id/hitButton"
                android:textSize="22sp"
                android:text="Hit"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="48dp" />
            <Button
                android:id="@+id/standButton"
                android:textSize="16sp"
                android:text="Stand"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="48dp" />
            <Button
                android:id="@+id/doubleDownButton"
                android:textSize="16sp"
                android:text="Double Down"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="72dp" />
            <Button
                android:id="@+id/splitButton"
                android:enabled="false"
                android:textSize="20sp"
                android:text="Split"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="48dp" />

        </LinearLayout>
        <LinearLayout
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_weight=".5"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:id="@+id/dealerScoreText"
                android:text="Dealer Score: "
                android:textSize="20sp"
                android:textColor="#FFEA00"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/playerScoreText"
                android:text="Player Score: "
                android:textSize="20sp"
                android:textColor="#FFEA00"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <EditText
            android:id="@+id/betEditText"
            android:layout_margin="16dp"
            android:layout_weight="1"
            android:hint="Enter Bet:"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <LinearLayout
            android:layout_gravity="center"
            android:weightSum="2"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/currentBetText"
                android:gravity="center"
                android:text="Current Bet: "
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
            <Button
                android:id="@+id/betButton"
                android:text="BET"
                android:textSize="24sp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_width="128dp"
                android:layout_height="0dp" />
        </LinearLayout>



    </LinearLayout>

</LinearLayout>